<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Novel Nest</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style>
        /* Sidebar Styles */
        body {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            background-color: #f0f4f7; /* Light grayish background */
            color: #2c3e50; /* Dark blue-gray text */
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 200px; /* Sidebar width */
            background-color: #0d6efd; /* Dark background */
            padding-top: 20px; /* Padding from top */
        }

            .sidebar .navbar-brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: #343a40; /* Brand color */
                padding: 15px; /* Padding for brand */
                padding-bottom: 10px; /* Adjusted padding */
                text-align: center; /* Centered brand text */
            }

            .sidebar .username {
                font-size: 0.8rem; /* Smaller font size for the username */
                color: #ffffff; /* White text for better contrast */
                padding: 0 15px; /* Padding for username display */
                text-align: center; /* Center the username */
                margin-bottom: 10px; /* Space below the username */
            }

            .sidebar .nav-link {
                color: #ffffff; /* White text for links */
                padding: 15px 20px; /* Padding for links */
                transition: background 0.3s; /* Transition effect */
            }

                .sidebar .nav-link:hover {
                    background-color: #495057; /* Darker background on hover */
                }

                .sidebar .nav-link.active {
                    background-color: #f39c12; /* Highlighted active link */
                    color: #fff; /* White text for active link */
                    font-weight: bold; /* Bold text for active link */
                }

        .content {
            margin-left: 250px; /* Offset for sidebar */
            padding: 20px; /* Content padding */
        }

        /* Card Styles */
        .card {
            background-color: #ffffff; /* White background for the card */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow */
            padding: 2rem; /* Inner padding */
            margin-top: 20px; /* Space above the card */
        }

        footer {
            background-color: #343a40; /* Dark background for footer */
            color: #ffffff; /* Light text color */
            padding: 15px; /* Padding for footer */
            text-align: center; /* Centered text */
            position: fixed; /* Fixed at bottom */
            bottom: 0; /* At the bottom */
            left: 0; /* Align left */
            right: 0; /* Align right */
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a class="navbar-brand" href="#">Novel Nest</a><br />

        @using Microsoft.AspNetCore.Identity
        @inject SignInManager<IdentityUser> SignInManager
        @inject UserManager<IdentityUser> UserManager

        @if (SignInManager.IsSignedIn(User))
        {
            <span class="username">Hello!</span>
            <span class="username">@UserManager.GetUserName(User)</span>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="/Book/Add" class="nav-link">Book</a>
                </li>
                <li class="nav-item">
                    <a href="/Author/Add" class="nav-link">Author</a>
                </li>
                <li class="nav-item">
                    <a href="/Genre/Add" class="nav-link">Genre</a>
                </li>
                <li class="nav-item">
                    <a href="/Publisher/Add" class="nav-link">Publisher</a>
                </li>
                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Add", "Genre", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
                    </form>
                </li>
            </ul>
        }
        else
        {
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
            </ul>
        }
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="container">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Novel Nest. All rights reserved. | Made with ❤️ | By Vidhi and Kruti</p>
    </footer>

    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
