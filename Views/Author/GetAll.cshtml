@model IEnumerable<BookStore.Models.Domain.Author>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-primary btn-lg" href="/Author/Add">Add Author</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Authors</h3>

            <table  class="table table-stripped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>AuthorName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <td>@item.AuthorName</td>
                        <td>
                                <a class="btn btn-success" href="/Author/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Additional Custom Styles */
    .table th, .table td {
        vertical-align: middle; /* Center content vertically */
    }

    .btn {
        margin-right: 10px; /* Space between buttons */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Light background on hover */
    }

    .thead-dark th {
        background-color: #343a40; /* Dark header background */
        color: #ffffff; /* White text */
    }
</style>
